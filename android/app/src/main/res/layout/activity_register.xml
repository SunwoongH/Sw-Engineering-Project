<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        android:background="@drawable/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/register_clothes_add_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/clothes_add"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/register_clothes_close_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/clothes_close"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/register_clothes_photo_add_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/clothes_attach_photo"
            app:layout_constraintTop_toTopOf="@id/register_clothes_iv"
            app:layout_constraintEnd_toEndOf="@id/register_clothes_iv"
            app:layout_constraintStart_toStartOf="@id/register_clothes_iv"
            app:layout_constraintBottom_toBottomOf="@id/register_clothes_iv"/>

        <ImageView
            android:id="@+id/register_clothes_iv"
            android:layout_width="350dp"
            android:layout_height="480dp"
            android:scaleType="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/register_clothes_add_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/register_season_nsv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/register_clothes_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_clothes_spring_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="봄"
                    android:textSize="18sp"
                    android:fontFamily="@font/font"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/clothes_search_select_off_background"/>

                <TextView
                    android:id="@+id/register_clothes_summer_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="여름"
                    android:textSize="18sp"
                    android:fontFamily="@font/font"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/clothes_search_select_off_background"/>

                <TextView
                    android:id="@+id/register_clothes_autumn_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="가을"
                    android:textSize="18sp"
                    android:fontFamily="@font/font"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/clothes_search_select_off_background"/>

                <TextView
                    android:id="@+id/register_clothes_winter_tv"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="겨울"
                    android:textSize="18sp"
                    android:fontFamily="@font/font"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/clothes_search_select_off_background"/>

            </LinearLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/register_kind_nsv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/register_season_nsv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/register_clothes_top_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의"
                        android:textSize="18sp"
                        android:fontFamily="@font/font"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/clothes_search_select_off_background"/>

                    <TextView
                        android:id="@+id/register_clothes_outer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아우터"
                        android:textSize="18sp"
                        android:fontFamily="@font/font"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/clothes_search_select_off_background"/>

                    <TextView
                        android:id="@+id/register_clothes_bottoms_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의"
                        android:textSize="18sp"
                        android:fontFamily="@font/font"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/clothes_search_select_off_background"/>

                    <TextView
                        android:id="@+id/register_clothes_onepiece_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원피스"
                        android:textSize="18sp"
                        android:fontFamily="@font/font"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/clothes_search_select_off_background"/>

                    <TextView
                        android:id="@+id/register_clothes_shoes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신발"
                        android:textSize="18sp"
                        android:fontFamily="@font/font"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/clothes_search_select_off_background"/>

                    <TextView
                        android:id="@+id/register_clothes_accessories_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="악세서리"
                        android:textSize="18sp"
                        android:fontFamily="@font/font"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/clothes_search_select_off_background"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/register_clothes_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="치수 : "
            android:fontFamily="@font/font"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/register_kind_nsv"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/register_clothes_size_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/register_clothes_size_tv"
            app:layout_constraintStart_toEndOf="@id/register_clothes_size_tv"
            app:layout_constraintBottom_toBottomOf="@id/register_clothes_size_tv">

            <TextView
                android:id="@+id/register_clothes_small_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="18sp"
                android:fontFamily="@font/font"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/clothes_search_select_off_background"/>

            <TextView
                android:id="@+id/register_clothes_medium_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="18sp"
                android:fontFamily="@font/font"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/clothes_search_select_off_background"/>

            <TextView
                android:id="@+id/register_clothes_large_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:textSize="18sp"
                android:fontFamily="@font/font"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/clothes_search_select_off_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_clothes_washing_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/register_kind_nsv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/register_clothes_washing_40_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/washing_40"/>

            <ImageView
                android:id="@+id/register_clothes_washing_60_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/washing_60"/>

            <ImageView
                android:id="@+id/register_clothes_washing_95_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/washing_95"/>

            <ImageView
                android:id="@+id/register_clothes_washing_no_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/washing_no"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>